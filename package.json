{
  "name": "twitter-clone",
  "version": "1.0.0",
  "description": "Twitter Clone with MERN Stack",
  "main": "index.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "restart-client": "cd client && npm run build && npm start",
    "restart-dev": "npm run server && npm run restart-client",
    "restart": "node restart.js",
    "install-all": "npm install && npm install --prefix server && npm install --prefix client"
  },
  "keywords": [
    "mern",
    "twitter",
    "clone"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
} 